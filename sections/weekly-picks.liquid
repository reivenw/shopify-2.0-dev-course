{{ 'section-weekly-picks.css' | asset_url | stylesheet_tag }}

<div class="weekly-picks">
    <h2 class="weekly-picks__header">Weekly picks</h2>
        <div class="weekly-picks__product-ctn">
            {% for product in section.settings.collection.products %}
                <div>
                    <a>
                        <p>{{ product.title }}</p>
                        <div>
                            <span>
                                {{ product.price | money }}
                            </span>
                        </div>
                    </a>
                </div>
            {%endfor%}
        </div>
</div>
 
{% schema %}
{
    "name": "Weekly picks",
    "settings":
    [
        {
            "type": "collection",
            "id": "collection",
            "label": "Collection"            
        }
    ],
    "presets":
    [
        {
            "name": "Weekly picks"
        }
    ]
}
{% endschema %}