<script>
  $('#slider1').slick({
  infinite: true,
  slidesToShow: 3,
  slidesToScroll: 3
});
</script>
<style>
  .wrapper {
width: 100%;
height: auto;
-webkit-box-shadow: 0px 3px 5px #BBB;
-moz-box-shadow: 0px 3px 5px #bbb;
box-shadow: 0px 3px 5px #BBB;
position: relative;
overflow: hidden;
}

  .slick-prev:before, .slick-next:before{
    color:red;
}
</style>
<div class="slideshow">
  <div class="wrapper">
    <center>
      <h2>Titulo</h2>
    </center>
    <div class="rslides_container">
      <ul class="rslides" id="slider1">
        {% for block in section.blocks %}
        <li class="slideshow-item">
          {{ block.settings.image | image_url: width: 200 | image_tag }}
        </li>
      {%endfor%}      
      </ul>
    </div>
  </div> 
{% schema %}
{
  "name": "Slideshow",
  "tag": "section",
  "class": "slideshow",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Slideshow"
    }
  ],
  "blocks": [
     {
       "name": "Slide",
       "type": "slide",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         }
       ]
     }
   ]
}
{% endschema %}

